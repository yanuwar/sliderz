<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape
            android:innerRadius="0dp"
            android:shape="ring"
            android:thickness="@dimen/thickness_active"
            android:useLevel="false">
            <solid android:color="@color/selectedIndicator"/>
        </shape>
    </item>
    <item>
        <shape
            android:innerRadius="0dp"
            android:shape="ring"
            android:thickness="@dimen/thickness_inactive"
            android:useLevel="false">
            <solid android:color="@color/defaultIndicator" />
        </shape>
    </item>
</selector>